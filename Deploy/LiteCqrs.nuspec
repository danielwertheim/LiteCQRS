<?xml version="1.0" encoding="utf-8"?>
<package>
  <metadata>
    <id>LiteCQRS</id>    
    <title>LiteCQRS</title>
	<version>0.0.0.0</version>
	<authors>danielwertheim</authors>
	<copyright>Daniel Wertheim</copyright>
	<summary>A small convention-based CQRS infrastructure.</summary>
    <description>
		LiteCQRS is a small convention-based CQRS framework that differs from others by NOT using interfaces or base-classes or attributes for defining command- and event handlers. Instead, it relies on method signatures and the namespace of the class, containing the method.
	</description>
	<projectUrl>http://github.com/danielwertheim/litecqrs</projectUrl>
	<licenseUrl>http://github.com/danielwertheim/litecqrs/blob/master/Source/License-LiteCQRS.txt</licenseUrl>
	<requireLicenseAcceptance>false</requireLicenseAcceptance>
	<tags>CQRS</tags>
	<dependencies>
      <dependency id="Ensure.That" version="0.6.0" />
	</dependencies>
  </metadata>
  <files>
    <file src="**\LiteCqrs.dll" target="lib\net40\"/>
	<file src="**\LiteCqrs.xml" target="lib\net40\"/>
  </files>  
</package>